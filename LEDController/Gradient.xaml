<Window x:Class="Controller.Gradient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:local="clr-namespace:Controller"
        mc:Ignorable="d"
        Title="Gradient" Height="{DynamicResource Window_Height}" Width="{DynamicResource Window_Width}" Background="{DynamicResource Background}">
    <Grid>
        <local:NavBar x:Name="navBar" Margin="0,1,0,562"/>
        <xctk:ColorPicker x:Name="Color1Choser" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top" Width="452" SelectedColorChanged="Color1Changed" />
        <TextBlock x:Name="Color1Text" HorizontalAlignment="Left" Margin="10,157,0,0" TextWrapping="Wrap" Text="Color 1" VerticalAlignment="Top" Height="185" Width="452" FontSize="120" TextAlignment="Center"/>
        <xctk:ColorPicker x:Name="Color2Choser" HorizontalAlignment="Left" Margin="10,596,0,0" VerticalAlignment="Top" Width="452" SelectedColorChanged="Color2Changed" />
        <TextBlock x:Name="Color2Text" HorizontalAlignment="Left" Margin="10,406,0,0" TextWrapping="Wrap" Text="Color 2" VerticalAlignment="Top" Height="185" Width="452" FontSize="120" TextAlignment="Center"/>
    </Grid>
</Window>
